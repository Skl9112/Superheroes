<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Superheroes.UI.Views"
             x:Class="Superheroes.UI.Views.HomePage">

    <StackLayout>
        <Label Text="Superheroes Home"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

        <Button Text="View Superheroes"
                Command="{Binding NavigateToSuperheroesCommand}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
